<div class="container">
  <div class= "row">

    <h2>商品一覧<span>(全<%= @items_all.count %>件)</span></h2>

  </div>
        <div class="row">
        <% @items.each do |item| %>

              <div class="item-index col-md-3 ">
                <%= link_to item_path(item) do %>
                <div class="im-field">
                <%= attachment_image_tag item, :image, size: "200x200", format: 'jpeg', fallback: "no_image.jpg", class: "item-index-img" %>
                <p><%= item.name %></p>
                <p>¥<%= item.price.to_s(:delimited) %></p>
                </div>
                <% end %>
              </div>


        <%end %>
        </div>
<div class= "row">
  <div class="col-xs-3 col-xs-offset-5">
    <%= paginate @items %>
    </div>
    </div>
</div>