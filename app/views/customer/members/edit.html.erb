<div class="container main">

    <div class="row">
        <div class="col-xs-12" >
        <div class="page-title">
      <span>会員情報編集</span>
    </div>

        <%= form_with model: @customer, url: members_path, local: true do |f| %>

        <div class="member-form col-xs-offset-1">
            <table>
                <tr>
                    <td>氏名</td>
                    <td><%= f.text_field :last_name, class: "last_name" %></td>
                    <td><%= f.text_field :first_name, class: "first_name" %></td>
                </tr>
                
                <tr>
					<td>フリガナ</td>
					<td><%= f.text_field :last_name_kana, class: "last_name_kana" %></td>
					<td><%= f.text_field :first_name_kana, class: "first_name_kana" %></td>
				</tr>
					
				<tr>
					<td>メールアドレス</td>
					<td><%= f.text_field :email, class: "email" %></td>
				</tr>
				
				<tr>
					<td>郵便番号(ハイフンなし)</td>
					<td><%= f.text_field :postal_code, class: "postal_code" %></td>
				</tr>
				
				<tr>
				    <td>住所</td>
				    <td ><%= f.text_field :address%></td>
				</tr>
				
				<tr>
					<td>電話番号(ハイフンなし)</td>
					<td><%= f.text_field :telephone_number, class: "phone_number" %></td>
				</tr>
				
				
            </table>
        <div class="row">
				<div class="col-xs-4 col-xs-offset-4">
					<div class="link-box center-block which-one">
						<%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
						<%= link_to "退会する", members_unsubscribe_path, class: "btn btn-danger" %>
					</div>
				</div>
			</div>
        <% end %>
        </div>
        </div>
    </div>
</div>