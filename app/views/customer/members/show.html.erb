<div class="container main">

  <div class="row">
	<div class="page-title">
		<span>マイページ</span>
	</div>
	<div class="col-xs-12">
		<div class="link-box">
			<span class="info-title">登録情報</span>
			<%= link_to '編集する', edit_members_path, class: "btn btn-primary" %>
		</div>
		<div class="member-info row">
			<div class=" col-xs-12 col-md-10 col-lg-8">
				<table class="table-bordered">
					<tr>
						<td>氏名</td>
						<td><%= @customer.last_name%><%= @customer.first_name%></td>
					</tr>
					<tr>
						<td>カナ</td>
						<td><%= @customer.last_name_kana%><%= @customer.first_name_kana%></td>
					</tr>
					<tr>
						<td>郵便番号</td>
						<td><%= @customer.postal_code.to_s.insert(3, "-") %></td>
					</tr>
					<tr>
						<td>住所</td>
						<td><%= @customer.address %></td>
					</tr>
					<tr>
						<td>電話番号</td>
						<td><%= @customer.telephone_number %></td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td><%= @customer.email %></td>
					</tr>
				</table>
			</div>
		</div>
		<div class="row">
			<div class="link-box">
				<span class="info-title">注文履歴</span>
				<%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %>
			</div>
		</div>
	</div>
</div>

</div>