<div class="container main">

  <div class="row order-info-new">

    <div class="page-title">
      <span>注文情報確認</span>
    </div>

     <%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
    <div>

        <div class="payment-new col-xs-12">
          <span class="info-title">支払い方法</span><br>

          <div class="payment-method-buttons col-xs-offset-1 col-sm-10">

            <%= f.radio_button :payment, :クレジットカード, checked: true, class:"radio" %>
            <%= f.label :payment, "クレジットカード" %><br>
            <%= f.radio_button :payment, :銀行振込, checked: true, class:"radio" %>
            <%= f.label :payment, "銀行振込" %>
          </div>
        </div>

    </div>

    <div class="shipping-new col-xs-12">
      <span class="info-title">お届け先</span><br>
        <table>

          <tr>
            <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
            <td><%= f.text_field :postal_code, value: @coustomer.postal_code %></td>
          </tr>

          <tr>
            <td><%= f.label :address, "住所" %></td>
            <td><%= f.text_field :address, value: @coustomer.address, size:10*7%></td>
          </tr>

          <tr>

            <td><%= f.label :name, "宛名" %></td>
            <td><%= f.text_field :name, value: @coustomer.last_name+@coustomer.first_name %></td>
          </tr>
           <%= f.hidden_field :customer_id, :value => current_customer.id  %>
            <%= f.hidden_field :shipping, :value => 800  %>
            <%= f.hidden_field :claim, :value => (total_price(@carts)+800)  %>
        </table>
        <%= f.submit "確認画面に進む", class: "btn btn-primary center-block link" %>
    </div>

  </div>
  </div>
<% end %>