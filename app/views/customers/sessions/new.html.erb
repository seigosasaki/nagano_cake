<div class="container main">
  <%= notice %>
  <div class="row">
  <div class="col-xs-12" >
    <div class="page-guide" >
      <span>会員の方はこちらからログイン</span>
    </div>
    <div class="row">
      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
        <div id="login-form" class="customer-form col-xs-10 col-xs-offset-1">
          <table>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.text_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td> <%= f.label :password, "パスワード" %></td>
              <td>
                <%= f.password_field :password, autofocus: true, autocomplete: "current-password" %>
              </td>
            </tr>
          </table>
          <%= link_to "パスワードを忘れた方はこちら", new_customer_password_path, class: "pull-right" %>
        </div>
        <div class="col-xs-1"></div>
        <div class="row">
          <div class="actions wide-btn col-xs-12">
            <%= f.submit "ログイン", class: "btn btn-primary center-block"  %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="another-link">
      <div class="page-guide">
        <span>会員登録がまだお済みでない方</span>
      </div>
      <p>
        <%= link_to "こちら", new_registration_path(resource_name) %>
        から新規登録してください。
      </p>
    </div>
  </div>
</div>
</div>