<div class="container">

  <div clas="row">
      <div class="edit-customer-hedding">
        <h3>
          <span><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</span>
        </h3>
    </div>
  </div>
<%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
  <div class="col-xs-9">
     

    <table class="table-customer">

      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>

      <tr>
        <th>氏名</th>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>

      <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>

      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>

      <tr>
        <th>住所</th>
        <td colspan="3"><%= f.text_field :address %></td>
      </tr>

      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
      </tr>

      <tr>
        <th>会員ステータス</th>
        <td>
          <% label :is_active, "有効", value: true %>
          <%= f.radio_button :is_active, true %> 有効

          <% label :is_active, "退会", value: false %>
          <%= f.radio_button :is_active, false %> 退会

        </td>
      </tr>
    </table>
  </div>


  <div class="row">
    <div class="col-xs-9">
      <%= f.submit "変更を保存", class: "btn btn-success center-block" %>
    </div>
<%end%>
  </div>


</div>