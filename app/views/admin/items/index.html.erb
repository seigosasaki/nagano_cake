<div class="container main">

  <div class="row">

    <div class="col-xs-7 col-xs-offset-2">

      <div class="heading page-title">
        <span>商品一覧</span>

      <%= link_to "商品追加", new_admin_item_path, class:"btn-circle-3d-dent pull-right" %>
    </div>

    <table class="table table-hover">
      <thead>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
      </thead>

      <% @items.each do |item| %>
      <tbody>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item) do %>
          <%= item.name %>
          <% end %>
          </td>
        <td><%= item.price.to_s(:delimited) %></td>
      </tbody>
      <%end%>




    </table>
    <div class="col-xs-3 col-xs-offset-5">
    <%= paginate @items %>
    </div>

    </div>

  </div>

</div>