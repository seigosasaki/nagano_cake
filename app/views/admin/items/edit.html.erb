<div class="container main">

  <div class="row">

    <div class="edit-heading">
      <h3>商品編集</h3>
    </div>
　
　 </div>
　 
　 <div class="row">
　   
　   <%= form_with model: @item, url: admin_item_path, local: true do |f| %>

      <div class="col-xs-12 col-xs-offset-3">
        <dl class="edit-form">
          <div class="item-edit-form">
          	<div class="field">
              <dt>商品画像</dt>
              <dd><%= f.attachment_field :image %></dd>
            </div>
            
            <div class="field">
              <dt>商品名</dt>
              <dd><%= f.text_field :name %></dd>
            </div>
            
            <div class="field">
              <dt>商品説明</dt>
              <dd><%= f.text_area :introduction, size:"20x5" %></dd>
            </div
            
            <div class="field">
              <dt>税込価格</dt>
              <dd><%= f.text_field :price %>円</dd>
            </div
          </div>
        </dl>
      </div>
      <div class="col-xs-3 col-xs-offset-5">
      	<div class= "btn-down">
      		<%= f.submit "新規登録", class: "btn btn-primary", style:"width:150px;height:50px;font-size:17px;font-weight:bold;margin-bottom:30px;" %>
      		
      	</div>
      	
      </div>
    <% end %>


  </div>
</div>